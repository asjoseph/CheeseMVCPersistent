@model IList<CheeseMVC.Models.CheeseCategory>

    <h1>@ViewBag.Title</h1>

    @if (Model.Count == 0)
{
    <p>Please add some categories!</p>
}
    @foreach (var category in Model)
    {
    <ul>
        @category.Name
    </ul>
    }
    <p><a asp-controller="Category" asp-action="Add">Add Category</a></p>

   
    